<div class="mx-auto px-4 md:max-w-screen-sm lg:max-w-screen-sm xl:max-w-screen-sm 2xl:max-w-screen-sm">

  <div class="flex justify-center">

    <div style="width: 260px;" class="flex flex-col items-center">
  
      <!-- Titles -->
      <h2 class="font-bold text-center mt-8">Réinitialiser votre mot de passe</h2>
      <p class="text-center mt-2">Nous vous enverrons un email avec un lien pour réinitialiser votre mot de passe</p>
  
      <div class="mt-6">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
      
          <div class="field">
            <%= f.label :email, "Email" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
      
          <div class="actions">
            <%= f.submit "Réinitialiser le mot de passe", class: "whitespace-normal cursor-pointer" %>
          </div>
        <% end %>
      </div>
    
      <%= render "devise/shared/links" %>
  
    </div>

  </div>

</div>