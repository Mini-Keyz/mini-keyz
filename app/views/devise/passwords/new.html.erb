<div class="container mx-auto px-4 md:max-w-screen-sm lg:max-w-screen-sm xl:max-w-screen-sm 2xl:max-w-screen-sm">

  <h2 class="mt-8">Mot de passe oubliÃ© ?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, "Email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "Envoyez moi un lien pour modifier mon mot de passe", class: "whitespace-normal cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>