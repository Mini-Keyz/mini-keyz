<div class="container mx-auto px-4 md:max-w-screen-sm lg:max-w-screen-sm xl:max-w-screen-sm 2xl:max-w-screen-sm">

  <h2 class="mt-8 font-bold">Modifier mon mot de passe</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, "Nouveau mot de passe" %> <i>(laisser vide si vous ne souhaitez pas le modifier)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> caractères minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirmation du nouveau mot de passe" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password, "Mot de passe actuel" %> <i>(nécessaire pour valider les changements)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Modifier" %>
    </div>
  <% end %>

  <h3 class="mt-8 font-bold">Supprimer mon compte</h3>

  <p>Unhappy? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Cette ation est définitive, êtes vous sûr de vouloir supprimer votre compte ?" }, method: :delete %></p>

  <%= link_to "Retour", user_path(current_user) %>

</div>