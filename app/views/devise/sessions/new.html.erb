<div class="mx-auto px-4 md:max-w-screen-sm lg:max-w-screen-sm xl:max-w-screen-sm 2xl:max-w-screen-sm">

  <div class="flex justify-center">

    <div style="width: 260px;" class="flex flex-col items-center">
  
      <!-- Titles -->
      <h2 class="text-lg font-bold mt-8">Content de vous revoir !</h2>
      <p class="text-lg font-bold">Identifiez-vous :</p>
    
      <div class="mt-6">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="relative">
            <!-- Email -->
            <div class="field flex justify-center">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", style: "width: 260px; height: 52px;", class: "px-2 border-2 rounded-tl rounded-tr" %>
            </div>
        
            <!-- Password -->
            <div class="field flex justify-center">
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "Mot de passe", style: "width: 260px; height: 52px;", class: "px-2 border-l-2 border-r-2 border-b-2 rounded-bl rounded-br" %>
            </div>
  
            <!-- Forgotten password? -->
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "OubliÃ© ?", new_password_path(resource_name), class: "absolute bottom-5 right-3 text-xs text-green-700 font-semibold underline" %>
            <% end %>
          </div>
          
          <!-- Remember me? -->
          <div class="flex justify-center mt-2">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me, checked: true %>
                <%= f.label :remember_me, "Se souvenir de moi" %>
              </div>
            <% end %>
          </div>
      
          <div class="mt-6">
            <div class="actions flex justify-center">
              <%= f.submit "Se connecter", style: "width: 260px; height: 52px;", class: "font-bold text-white bg-green-700" %>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- <%= render "devise/shared/links" %> -->
      <%- if controller_name != 'sessions' %>
        <%= link_to "Se connecter", new_session_path(resource_name) %><br />
      <% end %>
  
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <div class="flex flex-col items-center mt-6">
          <p class="text-xs text-gray-400 font-semibold">Vous n'avez pas encore de compte ?</p>
          <%= link_to "Inscrivez-vous", new_registration_path(resource_name), class: "text-xs text-green-700 font-bold" %>
        </div>
      <% end %>
  
      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
      <% end %>
  
      <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
      <% end %>
  
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "Se connecter avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
        <% end %>
      <% end %>
    </div>

  </div>

</div>