<div class="container-app flex justify-center">

  <div style="max-width: 480px;">

    <div class="mt-8">

      <%= turbo_frame_tag dom_id(@simulation) do %>
        <!-- Progress bar -->
        <div class="w-full h-4 bg-gray-100 rounded-lg">
          <p class="pl-1 text-xs">0%</p>
        </div>

        <!-- Form -->
        <%= form_with model: @simulation, url: wizard_path, data: { turbo_frame: :_top }, method: :patch, class: "mt-6" do |f| %>
  
          <% if f.object.errors.any? %>
            <p>Vous devez corriger les erreurs pour poursuivre</p>
          <% end %>
  
          <!-- 1/ Bien immobilier -->
          <div class="bg-green-100 bg-opacity-50 w-full px-4 sm:px-6 py-8 rounded-tl rounded-tr">
            <div class="flex items-center border-b-2 border-black">
              <i class="fas fa-home mx-1" style="font-size: 20px;"></i>
              <h2 class="text-xl font-bold">Bien immobilier</h2>
            </div>
  
            <!-- Ville -->
            <div class="flex flex-col mt-8">
              <%= f.label :house_city, "Ville", class: "font-bold" %>
              <%= f.text_field :house_city, placeholder: "Paris", style: "width: 200px; height: 40px;", class: "input-green" %>
              <%= errors_for @simulation, :house_city %>  
            </div>
  
            <!-- Prix d'achat -->
            <div class="flex flex-col mt-4">
              <%= f.label :house_price_bought_amount, "Prix d'achat", class: "font-bold" %>
              <p class="text-xs text-gray-500">Prix du bien + Frais d’agence</p>
              <%= f.number_field :house_price_bought_amount, placeholder: "200 000€", min: 0, pattern: "[0-9]*", inputmode: "numeric", style: "width: 200px; height: 40px;", class: "input-green" %>
              <%= errors_for @simulation, :house_price_bought_amount %>  
            </div>
  
            <!-- Budget travaux -->
            <div class="flex flex-col mt-4">
              <%= f.label :house_first_works_amount, "Budget travaux", class: "font-bold" %>
              <p class="text-xs text-gray-500">(optionnel)</p>
              <%= f.number_field :house_first_works_amount, placeholder: "15 000€ TTC", style: "width: 200px; height: 40px;", class: "input-green" %>
              <%= errors_for @simulation, :house_first_works_amount %>  
            </div>
  
            <!-- Charges annuelles totales -->
            <div class="flex flex-col mt-4">
              <%= f.label :house_total_charges_amount_per_year, "Charges annuelles totales", class: "font-bold" %>
              <p class="text-xs text-gray-500">En moyenne 80% sont récupérées sur le locataire</p>
              <%= f.number_field :house_total_charges_amount_per_year, placeholder: "1 200€", style: "width: 200px; height: 40px;", class: "input-green" %>
              <%= errors_for @simulation, :house_total_charges_amount_per_year %>  
            </div>
  
            <!-- Taxe foncière -->
            <div class="flex flex-col mt-4">
              <%= f.label :house_property_tax_amount_per_year, "Taxe foncière", class: "font-bold" %>
              <p class="text-xs text-gray-500">En moyenne 1 mois de loyer</p>
              <%= f.number_field :house_property_tax_amount_per_year, placeholder: "800€", style: "width: 200px; height: 40px;", class: "input-green" %>
              <%= errors_for @simulation, :house_property_tax_amount_per_year %>  
            </div>
  
          </div>
  
          <!-- Actions -->
          <div class="flex justify-center gap-x-4 sm:gap-x-8 mt-6 sm:mt-12">
            <%= link_to 'Retour', root_path, data: { turbo_frame: :_top }, class: "w-32 sm:w-40 h-14 text-lg text-gray-400 align-middle rounded p-2 border border-gray-300 whitespace-nowrap flex justify-center items-center", role: "button" %> <%# NOTE the _top target %>
            <div class="flex item-center"></div>
            <%= f.submit 'Suivant', class: "w-32 sm:w-40 h-14 text-lg font-bold text-white rounded bg-green-700 p-2 whitespace-normal cursor-pointer transition duration-150 hover:bg-green-800" %>
          </div>
  
        <% end %>

      <% end %>

    </div>

  </div>

</div>
